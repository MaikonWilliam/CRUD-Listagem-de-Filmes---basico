@page
@model RazorPagesFilmes.Pages.Films.IndexModel

@{   
    ViewData["Title"] = "Index";
}

<h1>Filmes Cadastrados</h1>

<p>
    <a asp-page="Create">Cadastrar novo filme</a>
</p>

<form>
    <p>
       <select asp-for="FilmeGenero" asp-items="@Model.Generos">
            <option value="" >Todos</option>
       </select>

       Buscar Filme <input type="text" asp-for="TermoBusca"/> 
       <input type="submit" value = "Buscar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].DataLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Price)
            </th>   
             <th>
                @Html.DisplayNameFor(model => model.Filme[0].Avaliacao)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Filme) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
             <th>
                @Html.DisplayFor(model =>item.Avaliacao)
            </th> 
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
